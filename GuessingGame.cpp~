//Guessing Game
#include <iostream>
using namespace std;
int main() {
  bool isPlaying = true;
  while(isPlaying == true)
  {
  char play = 'y';
  srand(time(NULL));
  int input = 0;
  int count = 0;
  int num = rand()% 101;
  cout << "This is a Guessing Game" << endl;
  cout << "Guess a number between 0 and 100" << endl;
  cin >> input;
  while(input !=num)
    {
  if(input > num)
  {
  cout << "Your guess was too high. Try again." << endl;
  cin >> input;
  count++;
  }
  if(input < num)
  {
  cout << "Your guess was too low. Try again." << endl;
  cin >> input;
  count++;
  }
    if(input == num)
  {
  cout << "Your guess was correct! That took you: " << count << " guesses. Do you want to play again? (Type y/n to respond)" << endl;
  cin >> play;
  }
  }
  if(play == 'y')
    {
      isPlaying = true;
    }
  else
    {
      isPlaying = false;
    }
   }
return 0;
}









